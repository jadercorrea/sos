<% @roles.each do |role| %>
  <tr class=<%=cycle('even', 'odd')%>>
    <td><%= role.name %></td>
    <td><%= link_to image_tag('icon_show.png', :size => '20x20'), role %></td>
    <td><%= link_to image_tag('icon_edit.png', :size => '20x20'), edit_role_path(role) %></td>
    <td><%= link_to image_tag('icon_destroy.png', :size => '20x20'), role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

