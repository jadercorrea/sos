<table>
  <tr>
    <th>Name</th>
    <th>Mail</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class=<%=cycle('even', 'odd')%>>
    <td><%= user.name %></td>
    <td><%= user.mail %></td>
    <td><%= user.role.name %></td>
    <td><%= link_to image_tag('icon_show.png', :size => '20x20'), user %></td>
    <td><%= link_to image_tag('icon_edit.png', :size => '20x20'), edit_user_path(user) %></td>
    <td><%= link_to image_tag('icon_destroy.png', :size => '20x20'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

